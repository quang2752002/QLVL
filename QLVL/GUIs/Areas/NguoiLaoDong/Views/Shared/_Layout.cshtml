    <script>
        $(document).ready(function () {
            var $carousel = $('.carousel');

            $carousel.carousel({
                interval: 500
            });

            $carousel.hover(
                function () {
                    $(this).find('.carousel-control').fadeIn('fast');
                },
                function () {
                    $(this).find('.carousel-control').fadeOut('fast');
                }
            );
        });
        var x = {
            init: function () {

                $("#logout").click(function () {
                    x.logout();
                });

            },

            logout: function () {
                $.ajax({
                    type: 'get',
                    dataType: 'json',
                    contentType: false,
                    processData: false,

                    url: '/Home/Logout/',
                    success: function (res) {
                        window.location.href = "/Login/Index";

                    },
                });
            },
        };
        x.init();

    <script>
       
        var x = {
            init: function () {
                
                $("#logout").click(function () {
                    x.logout();
                });

            },

            logout: function () {
                $.ajax({
                    type: 'get',
                    dataType: 'json',
                    contentType: false,
                    processData: false,
                   
                    url: '/Home/Logout/',
                    success: function (res) {
                        window.location.href = "/Login/Index";
                      
                    },
                });
            },
        };
        x.init();
    </script>
    @RenderSection("scripts", required: false)

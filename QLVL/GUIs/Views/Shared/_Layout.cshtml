    <style>
        #loading {
            background-color: white;
            position: fixed;
            display: block;
            top: 0;
            bottom: 0;
            z-index: 1000000;
            opacity: 0.5;
            width: 100%;
            height: 100%;
            text-align: center;
        }

            #loading img {
                width: 300px;
                height: 300px;
                margin: auto;
                display: block;
                top: calc(30% );
                left: calc(40% );
                position: absolute;
                z-index: 999999;
            }

        .no-wrap {
            white-space: nowrap;
        }
    </style>
    <div id="loading" style="display:none">
        <img src="~/Assets/admin/Animation - 1704819851844.gif" alt="Loading..." />
    </div>
     <div class="container-fluid" >
        
